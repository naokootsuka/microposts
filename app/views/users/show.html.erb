<div class="row">
  <aside class="col-md-4">
    <section class="user_info", "rows=20">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      </br>
      <p><%= link_to "update my profile", [:edit, @user] %></p>
    </section>
    <section>
      ã€€<span style="color: purple">email : <%= @user.email %></span>
        <span style="color: purple">profile : <%= @user.profile %></span>
        <span style="color: purple">area : <%= @user.area %></span>
    </section>
    <section>
        <p><button class: "btn btn-default">
          <%= link_to 'my followings', [:following, @user] %>
          <% if @followings.any? %>(<%= @followings.count %>)
          <% end %>
        </button></p>
        <p><button class: "btn btn-default">
          <%= link_to 'my followers', [:follower, @user] %>
          <% if @followers.any? %>(<%= @followers.count %>)
          <% end %>
        </button></p>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
