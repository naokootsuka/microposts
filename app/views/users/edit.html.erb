<h1>Update my Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for @user , :url => {:action => 'update'} do |f| %>

    <%= f.label :image, "My Photo" %>
    <%= f.file_field :image %>
    
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :profile, "プロフィール" %>
    <%= f.text_field :profile %>

    <%= f.label :area, "地域" %>
    <%= f.text_field :area %>
    
    
    
    
      
      <%= f.submit "Update my Profile", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>